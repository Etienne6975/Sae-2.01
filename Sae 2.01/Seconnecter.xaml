<Window x:Class="Sae_2._01.Seconnecter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Sae_2._01"
             Height="500" Width="500">


    <Grid Background="#F5F5F5">
        <Border Background="White" CornerRadius="10" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center" Height="304" Width="236" >

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">



                <TextBlock Text="Connexion" FontSize="20" FontWeight="Bold" Foreground="#E30613" HorizontalAlignment="Center"/>

                <StackPanel>
                    <TextBlock Text="Identifiant" Margin="0,5,0,2" Foreground="Gray"/>
                    <TextBox x:Name="nameTextBox" Height="30" Background="#FFF" BorderBrush="#CCC" BorderThickness="1" />
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Mot de passe" Margin="0,5,0,2" Foreground="Gray"/>
                    <PasswordBox x:Name="PasswordBox" Height="30" Background="#FFF" BorderBrush="#CCC" BorderThickness="1" Width="149" />
                </StackPanel>
                <Button Content="Connexion" Margin="0,30"
                             Height="40"
                             Style="{StaticResource ESFStyle}"
                             Click="Connexion_Click" />

            </StackPanel>
        </Border>
    </Grid>
</Window>
