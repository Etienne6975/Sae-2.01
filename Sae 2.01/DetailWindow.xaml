<Window x:Class="Sae_2._01.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sae_2._01"
        mc:Ignorable="d"
        Title="DetailWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Détail de l'inscription" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Semaine:"/>
            <TextBox x:Name="txtSemaine" Margin="0,5"/>

            <TextBlock Text="Date:"/>
            <TextBox x:Name="txtDate" Margin="0,5"/>

            <TextBlock Text="Horaire:"/>
            <TextBox x:Name="txtHoraire" Margin="0,5"/>

            <TextBlock Text="Catégorie:"/>
            <TextBox x:Name="txtCategorie" Margin="0,5"/>

            <TextBlock Text="Niveau:"/>
            <TextBox x:Name="txtNiveau" Margin="0,5"/>

            <Button Content="Fermer" Margin="0,15,0,0" Click="Fermer_Click"/>
        </StackPanel>

    </Grid>
</Window>
