<Window x:Class="Sae_2._01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sae_2._01"
        mc:Ignorable="d"
          Title="ESF Menu" Height="600" Width="900"
        Background="#F5F5F5" WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Colonnes -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <!-- Menu -->
            <ColumnDefinition Width="*"/>
            <!-- Contenu -->
        </Grid.ColumnDefinitions>

        <!-- ==== MENU LATERAL GAUCHE ==== -->
        <StackPanel Grid.Column="0" Background="#E30613" VerticalAlignment="Stretch">


            <StackPanel Margin="0,150,0,0" HorizontalAlignment="Center">

                <!-- Accueil -->
                <StackPanel Margin="0,10" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="24" Text="&#xE80F;" Foreground="Black" HorizontalAlignment="Center"/>
                    <Button Content="Accueil" Width="130" Height="30"
                            Background="#E30613" Foreground="White" BorderBrush="Black" BorderThickness="1"/>
                </StackPanel>

                <!-- Fiche Client -->
                <StackPanel Margin="0,40" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="24" Text="&#xE77B;" Foreground="Black" HorizontalAlignment="Center"/>
                    <Button Content="Fiche Client" Width="130" Height="30"
                            Background="#E30613" Foreground="White" BorderBrush="Black" BorderThickness="1"/>
                </StackPanel>

                <!-- Synthèse des sessions -->
                <StackPanel Margin="0,10,0,50" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="24" Text="&#xE8A5;" Foreground="Black" HorizontalAlignment="Center"/>
                    <Button Content="Synthèse des sessions" Width="130" Height="30"
                            Background="#E30613" Foreground="White" BorderBrush="Black" BorderThickness="1" Margin="0,0,0,-5"/>
                </StackPanel>

            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" >

            <!-- Fiche Client -->
            <Button Width="300" Height="100" Background="#E30613" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="0,0,0,36">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEB52;" FontSize="36" Foreground="Black" HorizontalAlignment="Center"/>
                    <TextBlock Text="Faire une inscription" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Fiche Client -->
            <Button Width="300" Height="100" Background="#E30613" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="0,0,0,33">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE77B;" FontSize="36" Foreground="Black" HorizontalAlignment="Center"/>
                    <TextBlock Text="Fiche Client" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Synthèse des sessions -->
            <Button Width="300" Height="100" Background="#E30613" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="0,0,0,40">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8A5;" FontSize="36" Foreground="Black" HorizontalAlignment="Center"/>
                    <TextBlock Text="Synthèse des sessions" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

        </StackPanel>
    </Grid>
</Window>

