<UserControl
    x:Class="Sae_2._01.fiche_client"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sae_2._01.Model"
    xmlns:model="clr-namespace:Sae_2._01.Model"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="584"
    d:DesignWidth="550"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <model:Gestion x:Name="lagestion" />
    </UserControl.DataContext>
    <Grid>
        <DataGrid
            Width="514"
            Height="195"
            Margin="0,196,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            ItemsSource="{Binding LesClients}"
            AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Numclient}"
                    Header="Numero Client" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Nomclient}"
                    Header="Nom" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Prenomclient}"
                    Header="Prenom" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding Datenaissance}"
                    Header="date de naissance" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Tel}"
                    Header="telephone" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Email}"
                    Header="Email" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
